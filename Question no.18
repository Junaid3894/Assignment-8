#include<stdio.h>

int main()
{
   int i,j;
   int n=13;
   int k=0;
   for(i=1;i<=n;i++){
      i<=(n/2)+1?k++:k--;
      for(j=1;j<=n+1;j++){ 
         if(j>=((n/2)+2)-k && j<=(n/2)+k){
            printf(" * ");
         }
         else{
            printf("   ");
         }
      }

      printf("\n");//move to next line
      }

   return 0;
}
